#!/usr/bin/env ruby

$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib/")

require 'cgminer_monitor'

command = ARGV.last.try(:to_sym)

unless CgminerMonitor::Daemon.available_commands.include?(command)
  puts "USAGE: cgminer_monitor [options] #{CgminerMonitor::Daemon.available_commands.collect(&:to_s).join('|')}"
  exit(0)
end

puts CgminerMonitor::Daemon.send(command)